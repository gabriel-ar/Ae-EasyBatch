{
    "configurations": [

        {
            "name": "NPM Run Dev",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Attach to Ae's CEF",
            "type": "chrome",
            "request": "attach",
            "port": 8009,
            "webRoot": "${workspaceFolder}/src",
        },
        {
            "name": "Attach to CEP Ae",
            "type": "extendscript-debug",
            "hostAppSpecifier": "aftereffects-25.0",
            "request": "attach",
        },
        {
            "name": "Launch in CEP Ae",
            "type": "extendscript-debug",
            "request": "launch",
            "hostAppSpecifier": "aftereffects-25.0",
            "script": "${workspaceFolder}/host/host.jsx",
            "bringToFront": false,
        },
    ]
}